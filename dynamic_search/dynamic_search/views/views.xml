<odoo>

  <record id="e_inherit" model="ir.ui.view">
    <field name="name">Dynamic search product</field>
    <field name="model">product.product</field>
    <field name="inherit_id"
      ref="stock.stock_product_search_form_view" />
    <field name="arch" type="xml">
      <xpath
        expr="//search"
        position="replace">
        <search>
          <field name="name" string="Product" filter_domain="['|', '|', ('default_code', 'ilike', self), ('description', 'ilike', self), ('name', 'ilike', self)]"/>
        </search>
      </xpath>
    </field>
  </record>

</odoo>